FROM ubuntu:latest
MAINTAINER tsmh

ENV DEBIAN_FRONTEND="noninteractive"
ENV TZ=Asia/Taipei

RUN apt update && \
	apt install tzdata

RUN apt upgrade -y && \
    apt install -y \
	  vim \
	  git \
	  curl \
	  mongodb \
	  redis-server \
	  default-jdk

RUN curl -sL https://deb.nodesource.com/setup_8.x | bash
RUN apt install -y nodejs


